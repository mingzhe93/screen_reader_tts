{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run sidecar:build && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "VoiceReader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": false,
        "readText": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "VoiceReader",
        "width": 1240,
        "height": 980,
        "minWidth": 980,
        "minHeight": 840,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "identifier": "com.voicereader.desktop",
      "icon": [
        "icons/icon.ico"
      ],
      "resources": [
        "binaries/**/*"
      ]
    }
  }
}
